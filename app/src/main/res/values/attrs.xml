<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--环形统计图百分比RingStatisticsView-->
    <declare-styleable name="RingStatisticsView">
        <attr name="rsv_RingWidth" format="reference|dimension"/>
        <attr name="rsv_CenterText" format="reference|string"/>
        <attr name="rsv_CenterNumber" format="reference|string"/>
        <attr name="rsv_CenterTextColor" format="reference|color"/>
        <attr name="rsv_CenterNumberColor" format="reference|color"/>
        <attr name="rsv_CenterTextSize" format="reference|dimension"/>
        <attr name="rsv_CenterNumberSize" format="reference|dimension"/>
        <attr name="rsv_PercentTextSize" format="reference|dimension"/>
    </declare-styleable>

    <!-- 搜索框-->
    <declare-styleable name="searchedit">
        <attr name="imagewidth" format="dimension"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
    </declare-styleable>

    <!-- 图片裁剪 -->
    <declare-styleable name="ClipViewLayout">

        <attr name="clipType" format="enum">
            <enum name="circle" value="1"/>
            <enum name="rectangle" value="2"/>
        </attr>

        <attr name="mHorizontalPadding" format="dimension"/>
        <attr name="clipBorderWidth" format="dimension"/>

    </declare-styleable>

    <declare-styleable name="SearchView">
        <attr name="layout_center" format="boolean"/>
        <attr name="layout_right" format="boolean"/>
        <attr name="click_visibility" format="boolean"/>
        <attr name="hint_color" format="color|reference"/>
        <attr name="hint_size" format="dimension|reference"/>
        <attr name="line_visibility" format="boolean"/>
        <attr name="colse_visiblity" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="SpinnerEditText">
        <attr name="pop_textsize" format="dimension"/>
        <attr name="pop_textcolor" format="color"/>
        <attr name="pop_min_height" format="dimension"/>
        <attr name="pop_max_height" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="SwipeItemLayout.Layout">
        <attr name="layout_itemType">
            <flag name="main" value="0x01"/>
            <flag name="menu" value="0x02"/>
        </attr>
    </declare-styleable>

</resources>