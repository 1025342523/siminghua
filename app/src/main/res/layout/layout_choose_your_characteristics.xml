<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_choose_your_characteristics_bg"
    android:paddingBottom="@dimen/DIMEN_50PX"
    >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_20PX"
        android:text="选择你的特征"
        android:textColor="@color/drawer_text_color"
        android:textSize="@dimen/text_size30"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/DIMEN_20PX"
        android:background="@color/box_border_color"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        />

    <TextView
        android:id="@+id/tv_vibrator"
        style="@style/ChooseYourCharacteristicsItemStyle"
        android:layout_marginTop="@dimen/DIMEN_50PX"
        android:text="1震动器"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line"
        />

    <TextView
        android:id="@+id/tv_vibrator2"
        style="@style/ChooseYourCharacteristicsItemStyle"
        android:text="2震动器"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_vibrator"
        />

    <TextView
        android:id="@+id/tv_rotate"
        style="@style/ChooseYourCharacteristicsItemStyle"
        android:text="震动+旋转"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_vibrator2"
        />

    <TextView
        android:id="@+id/tv_shrink"
        style="@style/ChooseYourCharacteristicsItemStyle"
        android:text="震动+收缩"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_rotate"
        />

</android.support.constraint.ConstraintLayout>