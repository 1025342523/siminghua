<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/icon_home_bg"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_50PX"
        app:layout_constraintTop_toTopOf="parent"
        >

        <include
            layout="@layout/layout_title"
            />

        <LinearLayout
            android:id="@+id/ll_bluetooth_connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="@dimen/DIMEN_40PX"
                android:layout_height="@dimen/DIMEN_40PX"
                android:layout_marginLeft="@dimen/DIMEN_30PX"
                android:src="@mipmap/icon_home_bluetooth_connection"
                />

            <TextView
                android:id="@+id/tv_bluetooth_connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_10PX"
                android:drawablePadding="@dimen/DIMEN_10PX"
                android:text="设备未连接"
                android:textColor="@color/white_255"
                android:textSize="@dimen/text_size30"
                />

        </LinearLayout>


        <ImageView
            android:id="@+id/iv_battery"
            android:layout_width="@dimen/DIMEN_35PX"
            android:layout_height="@dimen/DIMEN_35PX"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/DIMEN_90PX"
            />

        <ImageView
            android:id="@+id/iv_battery_two"
            android:layout_width="@dimen/DIMEN_35PX"
            android:layout_height="@dimen/DIMEN_35PX"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/DIMEN_30PX"
            android:layout_toLeftOf="@id/iv_battery"
            />

        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="@dimen/DIMEN_40PX"
            android:layout_height="@dimen/DIMEN_40PX"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/DIMEN_30PX"
            android:src="@mipmap/icon_home_setting"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:id="@+id/ll_real_time_manipulation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_50PX"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="@dimen/DIMEN_120PX"
                android:layout_height="@dimen/DIMEN_120PX"
                android:src="@mipmap/icon_home_real_time_manipulation"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_10PX"
                android:text="实时操控"
                android:textColor="@color/white_255"
                android:textSize="@dimen/text_size32"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_play_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_140PX"
            android:layout_marginTop="@dimen/DIMEN_50PX"
            android:layout_toEndOf="@id/ll_real_time_manipulation"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="@dimen/DIMEN_120PX"
                android:layout_height="@dimen/DIMEN_120PX"
                android:src="@mipmap/icon_play_music"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_10PX"
                android:text="音乐播放"
                android:textColor="@color/white_255"
                android:textSize="@dimen/text_size32"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_voice_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_real_time_manipulation"
            android:layout_marginTop="@dimen/DIMEN_100PX"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="@dimen/DIMEN_120PX"
                android:layout_height="@dimen/DIMEN_120PX"
                android:src="@mipmap/icon_voice_control"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_10PX"
                android:text="声音控制"
                android:textColor="@color/white_255"
                android:textSize="@dimen/text_size32"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_play_music"
            android:layout_marginLeft="@dimen/DIMEN_130PX"
            android:layout_marginTop="@dimen/DIMEN_100PX"
            android:layout_toRightOf="@id/ll_voice_control"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="@dimen/DIMEN_120PX"
                android:layout_height="@dimen/DIMEN_120PX"
                android:src="@mipmap/icon_custom"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_10PX"
                android:text="用户自定义"
                android:textColor="@color/white_255"
                android:textSize="@dimen/text_size32"
                />

        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>